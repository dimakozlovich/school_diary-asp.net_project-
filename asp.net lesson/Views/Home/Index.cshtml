@using prototypedb;
@model Timetable;
@{
    ViewData["Title"] = "Home Page";
 }

<div class="text-center">
   <table>
     
     @foreach(var subject in Model.Subjects)
     {
         <tr>
                <td>@Html.DisplayFor(modelItem => subject.Name_subject_id)</td>
                <td>@subject.Homework</td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { date = subject.Date_first_day_of_week,
                                                                    place_in_week = subject.Place_in_week,
                                                                    place_in_day = subject.Place_in_day,
                                                                    grade_id = subject.Grade_id }  );
                </td>
        </tr>
     }
   
    </table>
</div>
